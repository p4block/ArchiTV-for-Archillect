<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="space.linuxct.architv">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:keepScreenOn="true"
        android:allowBackup="true"
        android:icon="@mipmap/archillect_icon_512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.Leanback">
        <service
            android:name=".ArchiDream"
            android:exported="true"
            android:icon="@mipmap/archillect_icon_512"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <activity
            android:name="space.linuxct.architv.MainActivity"
            android:banner="@drawable/architv_banner"
            android:icon="@drawable/architv_banner"
            android:label="@string/app_name"
            android:logo="@drawable/architv_banner"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
